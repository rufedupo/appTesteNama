<p id="notice"><%= notice %></p>

<h1>Produtos</h1>

<table class="table table-striped">
    <thead>
        <tr>
          <th>Descrição</th>
          <th>Preço</th>
        </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
        </tr>
      <% end %>
    </tbody>
</table>